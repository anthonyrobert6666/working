
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    @Styles.Render("~/Content/css1/style.css")
    @Scripts.Render("~/Scripts/js/jquery-1.4.1.min.js")
    @Scripts.Render("~/Scripts/js/jquery.jcarousel.pack.js")
    @Scripts.Render("~/Scripts/js/jquery-func.js")
    @RenderSection("scripts", required: false)
    @RenderSection("css", required: false)
    <link rel="stylesheet" href="http://use.typekit.net/c/d87c14/minion-pro:i4:i7:n4:n7.XvF:M:2,XvD:M:2,XvJ:M:2,XvC:M:2/d?">
</head>
<body>
    <!-- Shell -->
    <div class="shell">
        <!-- Header -->
        <div id="header">
            <h1 id="logo"> @Html.ActionLink("Pen Shop", "Index", "Store")</h1>
            <!-- Cart -->
            <div id="cart">
                @Html.ActionLink("Your Shopping Cart", "Index", "ShoppingCart", null, new { @class = "cart-link" })
                <div class="cl">&nbsp;</div>
                <span>Articles: <strong>@{Html.RenderAction("CartNumber","ShoppingCart");}</strong></span> 
                &nbsp;&nbsp; <span>Cost: <strong>@{Html.RenderAction("CartTotal", "ShoppingCart");}</strong></span>
            </div>
            <!-- End Cart -->
            <!-- Navigation -->
            <div id="navigation">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Store")</li>
                    <li><a href="#">Support</a></li>
                    <li>@Html.ActionLink("The Store", "AllProduct", "Store")</li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                    @Html.Partial("_LoginStore")
                </ul>
            </div>

            <!-- End Navigation -->
        </div>
        <!-- End Header -->
        @RenderBody()
        <!-- Footer -->
        <div id="footer">
            <p class="left"> <a href="#">Home</a> <span>|</span> <a href="#">Support</a> <span>|</span> <a href="#">My Account</a> <span>|</span> <a href="#">The Store</a> <span>|</span> <a href="#">Contact</a> </p>
            <p class="right"> &copy; 2014 Shop Around. Design by <a href="#">CSC Viet Nam</a> </p>
        </div>
        <!-- End Footer -->
    </div>
    <!-- End Shell -->
</body>
</html>
